{
    "layer": "bottom",
    "position": "bottom",
    "mod": "dock",
    "font-weight": "normal",
    "gtk-layer-shell": "true",
    "exclusive": true,
    "passtrough": false,
    "height": 10,
    "modules-left": [
        "custom/arch",
        "sway/window"
    ],
    "modules-center": [],
    "modules-right": [
        "sway/workspaces",
        "network",
        "battery",
        "pulseaudio",
        "clock",
        "tray",
        "custom/powermenu"

    ],
    "custom/arch": {
            "format": "    ",
      "tooltip": false,
      "on-click": "rofi -show drun -show-icons -theme ~/.config/rofi/rofi.rasi"
    },
    "custom/powermenu": {
      "format": " ÔÄë ",
      "tooltip": false,
      "on-click": "sh ~/.config/sway/powermenu"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Û∞ÇÑ  {capacity}%",
        "format-plugged": "Û∞ÇÑ  {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["Û∞Å∫", "Û∞Å∫", "Û∞ÅΩ", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åæ", "Û∞Åæ", "Û∞ÇÇ", "Û∞ÇÇ", "Û∞Åπ", "Û∞Åπ"]
    },
    "hyprland/window": {
        "format": "{}",
        "rewrite": {
      "(.*) - Mozilla Firefox": "üåé $1",
      "(.*) - fish": "> [$1]"
    }
    },
    "sway/workspaces": {
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "all-outputs": true,
        "on-click": "activate",
        "format": "{icon}",
    },
    // "cpu": {
    //     "interval": 10,
    //     "format": "Ôò¶ {}%",
    //     "max-length": 10,
    //     "on-click": ""
    // },
    // "memory": {
    //     "interval": 30,
    //     "format": "Ôò™ {}%",
    //     "format-alt":"Ôë≤ {used:0.1f}G",
    //     "max-length": 10
    // },
    "custom/updates": {
        "exec": "(paru -Qua) | wc -l",
        "interval": 7200,
        "format": "Ôõô {}"
    },
    // "custom/language": {
    //     "exec": "cat /tmp/kb_layout",
    //     "interval": 3,
    //     "format": "Ô†ã {}",
    //     "tooltip": false
    // },
    "custom/weather" : {
        "tooltip" : true,
        "format" : "{}",
        "restart-interval" : 300,
        "exec" : "~/.config/waybar/scripts/waybar-wttr.py",
        "return-type" : "json"
    },
    "tray": {
        "icon-size": 13,
        "tooltip": false,
        "spacing": 10
    },
    "network": {
  	"format": "{ifname}",
  	"format-wifi": " Û∞ñ©  up" ,
  	"format-ethernet": "{ifname} ÔÉÅ",
  	"format-disconnected": "", //An empty format will hide the module.
  	"format-disconnected": "ÔÅ≤",
  	"tooltip-format": "{ifname}",
  	"tooltip-format-wifi": " Û∞ñ©  up",
  	"tooltip-format-ethernet": "{ifname} ÔÉÅ",
  	"tooltip-format-disconnected": "Disconnected",
        "on-click": "sh ~/.config/rofi/bins/rofi-network-manager.sh", 
 	"max-length": 50
  },
    "clock": {
        "format": "{:Û∞•î  %R}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "tooltip": false,
        "format-muted": "ÔÄ¶ Muted",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
            "on-click": "exec /usr/bin/pavucontrol"     
   }
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "tooltip": false,
        "format-source": "Ô°´ {volume}%",
        "format-source-muted": "Ô°¨ Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    }
}
